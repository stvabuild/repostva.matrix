<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">52</defaultcontrol>
	<controls>
		<include>DefaultBackground</include>
		<control type="group">
			<include>Animation_TopSlide</include>
			<control type="image">
				<top>120</top>
				<width>2560</width>
				<height>121</height>
				<centerleft>50%</centerleft>
				<texture>dialogs/logo-password.png</texture>
			</control>
			<control type="textbox">
				<centerleft>50%</centerleft>
				<top>200</top>
				<width>750</width>
				<height>300</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font14</font>
				<label>$LOCALIZE[31098]</label>
			</control>
		</control>
		<control type="group">
			<include>OpenClose_Right</include>
			<control type="fixedlist" id="52">
				<left>0</left>
				<right>0</right>
				<top>480</top>
				<height>300</height>
				<onleft>52</onleft>
				<onright>52</onright>
				<onup>20</onup>
				<ondown>20</ondown>
				<focusposition>2</focusposition>
				<orientation>horizontal</orientation>
				<scrolltime tween="cubic" easing="out">500</scrolltime>
				<itemlayout width="384" height="300">
					<control type="image">
						<left>30</left>
						<top>-20</top>
						<right>30</right>
						<bottom>-20</bottom>
						<texture border="30">buttons/dialogbutton-nofo.png</texture>
					</control>
					<control type="image">
						<centerleft>50%</centerleft>
						<top>20</top>
						<height>210</height>
						<width>240</width>
						<texture diffuse="dialogs/profile-diffuse.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
					</control>
					<control type="textbox">
						<left>60</left>
						<right>60</right>
						<top>220</top>
						<height>80</height>
						<label>$INFO[ListItem.label]</label>
						<font>font27</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>99FFFFFF</textcolor>
					</control>
				</itemlayout>
				<focusedlayout width="384" height="300">
					<control type="group">
						<depth>DepthContentPopout</depth>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="192,150" start="100" end="120" time="200" tween="sine" />
						</animation>
						<animation type="UnFocus" reversible="false">
							<effect type="zoom" center="192,150" start="120" end="100" time="150" tween="sine" />
						</animation>
						<control type="image">
							<left>30</left>
							<top>-20</top>
							<right>30</right>
							<bottom>-20</bottom>
							<texture border="30">buttons/dialogbutton-nofo.png</texture>
						</control>
						<control type="image">
							<left>30</left>
							<top>-20</top>
							<right>30</right>
							<bottom>-20</bottom>
							<texture border="30" colordiffuse="$VAR[SkinColorVar]">buttons/dialogbutton-fo.png</texture>
							<visible>!Control.HasFocus(20)</visible>
						</control>
						<control type="image">
							<centerleft>50%</centerleft>
							<top>20</top>
							<height>210</height>
							<width>240</width>
							<texture diffuse="dialogs/profile-diffuse.png">$INFO[ListItem.Icon]</texture>
							<aspectratio scalediffuse="false">scale</aspectratio>
						</control>
						<control type="textbox">
							<left>60</left>
							<right>60</right>
							<top>220</top>
							<height>80</height>
							<label>$INFO[ListItem.label,[B],[/B]]</label>
							<font>font27</font>
							<align>center</align>
							<aligny>center</aligny>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="label">
				<left>0</left>
				<right>0</right>
				<top>840</top>
				<height>45</height>
				<font>font25_narrow</font>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.label2]</label>
			</control>
		</control>
		<control type="button" id="20">
			<centerleft>50%</centerleft>
			<bottom>20</bottom>
			<width>500</width>
			<height>130</height>
			<textoffsetx>40</textoffsetx>
			<label>$LOCALIZE[31072]</label>
			<font>font13</font>
			<align>center</align>
			<onclick>ActivateWindow(ShutdownMenu)</onclick>
			<onup>52</onup>
			<ondown>52</ondown>
			<texturefocus border="40" colordiffuse="$VAR[SkinColorVar]">buttons/dialogbutton-fo.png</texturefocus>
			<texturenofocus border="40">buttons/dialogbutton-nofo.png</texturenofocus>
			<include>Animation_BottomSlide</include>
		</control>
		<include>TopBar</include>
		<control type="group">
			<top>20</top>
			<left>20</left>
			<control type="image">
				<aspectratio>keep</aspectratio>
				<width>56</width>
				<height>56</height>
				<texture>special://skin/extras/icons/iconstva.png</texture>
			</control>
			<control type="image">
				<left>40</left>
				<top>10</top>
				<aspectratio>keep</aspectratio>
				<width>192</width>
				<height>36</height>
				<texture>icons/logo-text.png</texture>
			</control>
		</control>
	</controls>
</window>