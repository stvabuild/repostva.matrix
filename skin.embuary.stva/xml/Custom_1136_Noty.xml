<?xml version="1.0" encoding="UTF-8"?>
<window id="1136">
	<zorder>999</zorder>
	<defaultcontrol always="true">601</defaultcontrol>
	<onload>Skin.SetBool(ClearPlaylist)</onload>
	<include>PropertyIncludes</include>
	<controls>
		<control type="group">
			<control type="image">
				<include>Visible_Fade</include>
				<include>FullscreenDimensions</include>
				<texture colordiffuse="background">common/white.jpg</texture>
			</control>
			<control type="scrollbar" id="3000">
				<include>HiddenObject</include>
			</control>
			<control type="group">
				<visible>!Window.IsVisible(selectdialog) + !Window.IsVisible(1112)</visible>
				<include>Visible_PopupOpenClose</include>
				<include>Dialog_PopupOpenClose</include>

				<!-- #1 -->
				<control type="grouplist">
					<visible allowhiddenfocus="true">ControlGroup(600).HasFocus</visible>
					<include>Visible_PopupOpenClose</include>
					<centerleft>50%</centerleft>
					<centertop>50%</centertop>
					<width>1200</width>
					<height max="940">auto</height>
					<orientation>vertical</orientation>
					<itemgap>40</itemgap>
					<align>center</align>
					<!-- headline -->
					<control type="label">
						<centerleft>50%</centerleft>
						<width>100%</width>
						<height>26</height>
						<font>Med34</font>
						<textcolor>$VAR[AccentColor]</textcolor>
						<scroll>false</scroll>
						<align>center</align>
						<aligny>top</aligny>
						<label>$LOCALIZE[31479]</label>
					</control>
					<!-- message -->
					<control type="textbox">
						<centerleft>50%</centerleft>
						<width>100%</width>
						<height max="760">auto</height>
						<font>PopUpText</font>
						<autoscroll>false</autoscroll>
						<align>center</align>
						<aligny>top</aligny>
						<pagecontrol>3000</pagecontrol>
						<label>$LOCALIZE[31480][CR][CR][COLOR $VAR[AccentColor]]â€¢ $LOCALIZE[31481][/COLOR][CR][CR]$LOCALIZE[31482]</label>
					</control>
					<!-- buttons -->
					<control type="grouplist" id="600">
						<height>50</height>
						<width>100%</width>
						<orientation>horizontal</orientation>
						<itemgap>5</itemgap>
						<align>center</align>
						<onright>noop</onright>
						<onleft>noop</onleft>
						<control type="button" id="601">
							<include>DarkGreyButton</include>
							<label>$LOCALIZE[31093]</label>
							<onclick condition="System.AddonIsEnabled(script.stva.matrix.v)">RunScript(script.embuary.helper,action=toggleaddons,addonid=script.stva.matrix.v,enable=false))</onclick>
							<onclick>Skin.SetBool(noty)</onclick>
							<onclick>Close</onclick>
							<onclick>ReplaceWindow(home)</onclick>
							<onup>PageUp(3000)</onup>
							<ondown>PageDown(3000)</ondown>
							<onclick>RunScript(script.skinshortcuts,type=resetall&amp;warning=true)</onclick>
							<onclick>SetProperty(DefaultsReset,1,home)</onclick>
							<onclick>ActivateWindow(1112)</onclick>
						</control>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>