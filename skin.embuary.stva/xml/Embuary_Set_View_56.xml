<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Set_View_56">
		<param name="layout">PosterLayoutHome</param>
		<definition>
			<control type="group">
				<include>Visible_OpenClose</include>
				<visible>Control.IsVisible(56)</visible>
				<control id="56" type="wraplist">
					<visible>$EXP[SetViewVisible]</visible>
					<include>FocusBounce</include>
					<width>auto</width>
					<height>490</height>
					<top>550</top>
					<onright condition="Control.IsVisible(7000)">SetFocus(7000)</onright>
					<onright condition="!Control.IsVisible(7000) + Control.IsVisible(17)">17</onright>
					<onright>noop</onright>
					<ondown>noop</ondown>
					<onup>SetFocus(100)</onup>
					<onleft>SetFocus(4000)</onleft>
					<include>ScrollTime</include>
					<orientation>horizontal</orientation>
					<preloaditems>4</preloaditems>
					<movement>2</movement>
					<defaultcontrol always="true">0</defaultcontrol>
					<viewtype label="$LOCALIZE[31454]">panel</viewtype>
					<pagecontrol>17</pagecontrol>
					<oninfo condition="String.IsEqual(ListItem.DBType,set) + !String.IsEmpty(Container(2001).ListItem.Label)">RunScript(script.embuary.helper,action=textviewer,header='$ESCINFO[ListItem.Title]',message='$ESCVAR[ListViewPlot]')</oninfo>
					<include content="View_Forced">
						<param name="string" value="$LOCALIZE[31454]"/>
					</include>
					<itemlayout condition="!Skin.HasSetting(HidePosterLabels) | !Window.IsVisible(myvideonav.xml) | $EXP[ForceLabels]" width="257" height="445">
						<control type="group">
							<left>70.5</left>
							<top>122</top>
							<include content="$PARAM[layout]">
								<param name="mainlabel" value="$PARAM[mainlabel]" />
								<param name="sublabel" value="$PARAM[sublabel]" />
								<param name="thumblabel" value="$PARAM[thumblabel]" />
								<param name="ar" value="$PARAM[ar]" />
								<param name="focused" value="false" />
								<param name="id" value="56" />
							</include>
						</control>
					</itemlayout>
					<focusedlayout condition="!Skin.HasSetting(HidePosterLabels) | !Window.IsVisible(myvideonav.xml) | $EXP[ForceLabels]" width="257" height="445">
						<include content="SetPropertyOnFocus">
							<param name="id" value="56"/>
						</include>
						<control type="group">
							<left>70.5</left>
							<top>122</top>
							<include content="$PARAM[layout]">
								<param name="mainlabel" value="$PARAM[mainlabel]" />
								<param name="sublabel" value="$PARAM[sublabel]" />
								<param name="thumblabel" value="$PARAM[thumblabel]" />
								<param name="ar" value="$PARAM[ar]" />
								<param name="focused" value="true" />
								<param name="id" value="56" />
								<param name="visible_forced" value="true"/>
							</include>
						</control>
					</focusedlayout>
					<itemlayout condition="Skin.HasSetting(HidePosterLabels) + Window.IsVisible(myvideonav.xml) + !$EXP[ForceLabels]" width="257" height="378">
						<control type="group">
							<left>70.5</left>
							<top>175</top>
							<include content="$PARAM[layout]">
								<param name="mainlabel" value="$PARAM[mainlabel]" />
								<param name="sublabel" value="$PARAM[sublabel]" />
								<param name="thumblabel" value="$PARAM[thumblabel]" />
								<param name="labels_visible" value="false" />
								<param name="ar" value="$PARAM[ar]" />
								<param name="focused" value="false" />
								<param name="id" value="56" />
							</include>
						</control>
					</itemlayout>
					<focusedlayout condition="Skin.HasSetting(HidePosterLabels) + Window.IsVisible(myvideonav.xml) + !$EXP[ForceLabels]" width="257" height="378">
						<include content="SetPropertyOnFocus">
							<param name="id" value="56"/>
						</include>
						<control type="group">
							<left>70.5</left>
							<top>175</top>
							<include content="$PARAM[layout]">
								<param name="mainlabel" value="$PARAM[mainlabel]" />
								<param name="sublabel" value="$PARAM[sublabel]" />
								<param name="thumblabel" value="$PARAM[thumblabel]" />
								<param name="labels_visible" value="false" />
								<param name="ar" value="$PARAM[ar]" />
								<param name="focused" value="true" />
								<param name="id" value="56" />
								<param name="visible_forced" value="true"/>
							</include>
						</control>
					</focusedlayout>
				</control>
			<!-- Meta -->
			<control type="group">
				<height>1077</height>
				<control type="group">
					<top>115</top>
					<height>435</height>
					<!-- poster -->
					<include content="MetaPoster56">
						<param name="visible" value="Integer.IsGreater(Container.NumItems,0)"/>
					</include>
					<!-- meta -->
					<control type="group">
						<visible>!ListItem.IsParentFolder</visible>
						<top>-5</top>
						<left>390</left>
						<right>70</right>
						<height>500</height>
						<!-- title -->
						<control type="label">
							<right>440</right>
							<height>60</height>
							<label>$INFO[ListItem.Title]</label>
							<aligny>top</aligny>
							<font>Reg37</font>
						</control>
						<!-- meta -->
						<control type="group">
							<top>65</top>
							<right>440</right>
							<height>40</height>
							<include>MetaSetInfos</include>
							<visible>Container.Content(sets) | String.IsEqual(ListItem.DBType,set)</visible>
						</control>
						<control type="group">
							<top>65</top>
							<right>440</right>
							<height>40</height>
							<include>MetaShowInfos</include>
							<visible>Container.Content(tvshows)</visible>
						</control>
						<control type="group">
							<top>65</top>
							<right>440</right>
							<height>40</height>
							<include>MetaMovieInfos</include>
							<visible>!Container.Content(tvshows) + !Container.Content(sets) + !String.IsEqual(ListItem.DBType,set)</visible>
						</control>
						<!-- buttons -->
						<control type="list" id="100">
							<top>88</top>
							<height>130</height>
							<width>100%</width>
							<orientation>horizontal</orientation>
							<defaultcontrol always="true">0</defaultcontrol>
							<onright>noop</onright>
							<onleft>noop</onleft>
							<onback>56</onback>
							<ondown>56</ondown>
							<onup>6666</onup>
							<include>FocusBounce</include>
							<itemlayout height="130" width="146">
								<include content="IconMenu">
									<param name="id" value="100"/>
								</include>
							</itemlayout>
							<focusedlayout height="130" width="146">
								<include content="IconMenu">
									<param name="id" value="100"/>
									<param name="focused" value="true"/>
								</include>
							</focusedlayout>
							<content>
								<item>
									<visible>!String.IsEmpty(ListItem.FileNameAndPath)</visible>
									<label>$LOCALIZE[208]</label>
									<property name="icon">&#xf40a;</property>
									<include>ClearFocusBounceBefore</include>
									<onclick condition="![$EXP[ForceCinemaMode] + !String.IsEmpty(ListItem.DBID) + !String.IsEqual(Skin.String(CinemaModeFor),episodes) + !Integer.IsGreater(ListItem.PercentPlayed,0)]">Select</onclick>
									<onclick condition="$EXP[ForceCinemaMode] + !String.IsEmpty(ListItem.DBID) + !String.IsEqual(Skin.String(CinemaModeFor),episodes) + !Integer.IsGreater(ListItem.PercentPlayed,0)">RunScript(script.embuary.helper,action=playcinema)</onclick>
								</item>
								<item>
									<visible>[Container.Content(tvshows) | String.IsEqual(ListItem.DBType,set)] + String.IsEmpty(ListItem.FileNameAndPath)</visible>
									<label>$LOCALIZE[1024]</label>
									<property name="icon">&#xf24b;</property>
									<include>ClearFocusBounceBefore</include>
									<onclick>Select</onclick>
								</item>
								<item>
									<label>$LOCALIZE[208]</label>
									<property name="icon">&#xf40a;</property>
									<include>ClearFocusBounceBefore</include>
									<onclick>RunScript(script.embuary.helper,action=playfolder,dbid=$INFO[ListItem.DBID])</onclick>
									<visible>!String.IsEmpty(ListItem.DBID) + String.IsEqual(ListItem.DBType,tvshow)</visible>
								</item>
								<item>
									<label>$LOCALIZE[31323]</label>
									<property name="icon">&#xf49d;</property>
									<include>ClearFocusBounceBefore</include>
									<onclick>RunScript(script.embuary.helper,action=playfolder,dbid=$INFO[ListItem.DBID],shuffle=true)</onclick>
									<visible>!String.IsEmpty(ListItem.DBID) + String.IsEqual(ListItem.DBType,tvshow)</visible>
								</item>
								<item>
									<visible>!String.IsEmpty(ListItem.Trailer)</visible>
									<label>$LOCALIZE[20410]</label>
									<property name="icon">&#xf230;</property>
									<onclick>PlayMedia($INFO[ListItem.Trailer])</onclick>
								</item>
								<item>
									<visible>!String.IsEmpty(ListItem.Plot) | !String.IsEmpty(Container(2001).ListItem.Label)</visible>
									<label>$LOCALIZE[207]</label>
									<property name="icon">&#xf9a9;</property>
									<onclick condition="!String.IsEqual(ListItem.DBType,set)">RunScript(script.embuary.helper,action=textviewer,header='$ESCINFO[ListItem.Title]',message='$ESCINFO[ListItem.Plot]')</onclick>
									<onclick condition="String.IsEqual(ListItem.DBType,set) + !String.IsEmpty(Container(2001).ListItem.Label)">RunScript(script.embuary.helper,action=textviewer,header='$ESCINFO[ListItem.Title]',message='$ESCVAR[ListViewPlot]')</onclick>
								</item>
								<item>
									<visible>System.HasAddon(plugin.video.youtube) + [Container.Content(movies) | Container.Content(tvshows)]</visible>
									<label>YouTube</label>
									<property name="icon">&#xf5c3;</property>
									<include>ClearFocusBounceBefore</include>
									<onclick condition="Container.Content(tvshows)">RunScript(script.embuary.helper,action=goto,path='"plugin://plugin.video.youtube/kodion/search/query/?q=$INFO[ListItem.TVShowTitle]&amp;search_type=videos"',target=videos)</onclick>
									<onclick condition="Container.Content(movies)">RunScript(script.embuary.helper,action=goto,path='"plugin://plugin.video.youtube/kodion/search/query/?q=$INFO[ListItem.Title]&amp;search_type=videos"',target=videos)</onclick>
								</item>
								<item>
									<label>$LOCALIZE[16101]</label>
									<property name="icon">&#xfe6e;</property>
									<include>ToggleWatchedAction</include>
									<visible>!$EXP[IsWatched]</visible>
								</item>
								<item>
									<label>$LOCALIZE[16102]</label>
									<property name="icon">&#xfe6e;</property>
									<property name="color">red</property>
									<include>ToggleWatchedAction</include>
									<visible>$EXP[IsWatched]</visible>
								</item>
								<item>
									<visible>$EXP[HasEmbyContext] | $EXP[HasEmbyConContext]</visible>
									<label>$LOCALIZE[31366]</label>
									<property name="icon">&#xf1d8;</property>
									<onclick condition="$EXP[HasEmbyContext]">RunScript(special://home/addons/plugin.video.emby/context.py)</onclick>
									<onclick condition="$EXP[HasEmbyConContext]">RunPlugin(plugin://plugin.video.embycon?mode=SHOW_MENU&amp;item_id=$INFO[ListItem.Property(id)])</onclick>
								</item>
							</content>
						</control>
						<!-- genre -->
						<control type="group">
							<top>209</top>
							<include>MetaGenre</include>
						</control>
						<!-- plot -->
						<control type="textbox">
							<top>255</top>
							<width>100%</width>
							<height max="160">auto</height>
							<align>justify</align>
							<aligny>top</aligny>
							<label>$VAR[SetViewPlot]</label>
							<font>Light24</font>
							<autoscroll>false</autoscroll>
						</control>
						<!-- video meta-->
						<control type="group">
							<top>425</top>
							<height>40</height>
							<include>MetaMediaInfo</include>
						</control>
					</control>
					<!-- logo -->
					<include>MetaClearlogo</include>
				</control>				
			</control>
			</control>
		</definition>
	</include>
</includes>