<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<!-- Side Menu Headline -->
	<include name="SideBarHeadline">
		<param name="width">100%</param>
		<param name="visible">true</param>
		<param name="color">panel_textcolor</param>
		<param name="spacer">false</param>
		<definition>
			<control type="label" id="98$PARAM[nr]">
				<height>10</height>
				<label/>
				<visible>$PARAM[spacer]</visible>
			</control>
			<control type="group" id="99$PARAM[nr]">
				<visible>$PARAM[visible]</visible>
				<height>50</height>
				<top>$PARAM[top]</top>
				<!-- headline -->
				<control type="label">
					<top>10</top>
					<width>$PARAM[width]</width>
					<height>50</height>
					<font>Med22</font>
					<textcolor>$PARAM[color]</textcolor>
					<label>$PARAM[label]</label>
					<textoffsetx>15</textoffsetx>
					<aligny>top</aligny>
				</control>
			</control>
		</definition>
	</include>


	<include name="SidebarItemLayout">
		<param name="focused">false</param>
		<definition>
			<control type="group">
				<width>$PARAM[width]</width>
				<height>50</height>
				<control type="image">
					<height>50</height>
					<width>$PARAM[width]</width>
					<texture colordiffuse="sidepanel_focus">common/white.jpg</texture>
					<aspectratio>stretch</aspectratio>
					<aligny>center</aligny>
					<visible>Control.HasFocus($PARAM[id]) + $PARAM[focused]</visible>
				</control>
				<control type="label">
					<top>6</top>
					<left>45</left>
					<height>37</height>
					<aligny>center</aligny>
					<align>left</align>
					<font>Material20</font>
					<textcolor>sidepanel_textcolor</textcolor>
					<label>$VAR[SidebarIcon]</label>
				</control>
				<control type="label">
					<top>5</top>
					<left>90</left>
					<right>15</right>
					<height>40</height>
					<align>left</align>
					<aligny>center</aligny>
					<font>Reg22</font>
					<textcolor>sidepanel_textcolor</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</control>
		</definition>
	</include>
</includes>