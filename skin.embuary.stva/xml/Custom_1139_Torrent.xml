<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1139">
	<defaultcontrol>1999</defaultcontrol>
	<include>PropertyIncludes</include>
	<onload condition="!String.IsEqual(Control.GetLabel(1002),$LOCALIZE[12021]) + Control.IsVisible(1999)">SetFocus(1999)</onload>
	<controls>
		<include content="DiffuseMask"/>
		<control type="group">
			<include>Dialog_PopupOpenClose</include>
			<centerleft>50%</centerleft>
			<width>600</width>
			<centertop>50%</centertop>
			<height>1072</height>
			<control type="grouplist" id="996">
				<orientation>vertical</orientation>
				<height>auto</height>
				<align>center</align>
				<itemgap>0</itemgap>
				<onright>close</onright>
				<onleft>close</onleft>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="image" id="1">
					<width>100%</width>
					<height>61</height>
					<texture border="65,0,65,0" colordiffuse="context_color">dialogs/context/top.png</texture>
				</control>
				<!-- embuary context -->
				<control type="button" id="1999">
					<include content="ContextButton"/>
					<label>Torrest</label>
					<onclick>Dialog.Close(all)</onclick>
					<onclick condition="!System.HasAddon(repository.github)">InstallAddon(repository.github)</onclick>
					<onclick condition="!System.HasAddon(plugin.video.torrest)">InstallAddon(plugin.video.torrest)</onclick>
				</control>
				<control type="button" id="1998">
					<include content="ContextButton"/>
					<label>Elementum (Android ARM7 y Windows x64)</label>
					<onclick>Dialog.Close(all)</onclick>
					<onclick condition="!System.HasAddon(plugin.video.elementum)">InstallAddon(plugin.video.elementum)</onclick>
				</control>
				<control type="image" id="2">
					<width>100%</width>
					<height>61</height>
					<texture border="65,0,65,0" colordiffuse="context_color">dialogs/context/bottom.png</texture>
				</control>
			</control>
		</control>
	</controls>
</window>
