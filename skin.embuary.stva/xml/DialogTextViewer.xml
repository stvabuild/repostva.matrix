<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">100</defaultcontrol>
	<include>PropertyIncludes</include>
	<controls>
		<include content="DiffuseMask">
			<param name="color">background_diffuse</param>
		</include>
		<control type="scrollbar" id="3000">
			<include>HiddenObject</include>
		</control>
		<control type="grouplist">
			<include>Dialog_PopupOpenClose</include>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>80%</width>
			<height>1080</height>
			<orientation>vertical</orientation>
			<itemgap>20</itemgap>
			<align>center</align>
			<!-- headline -->
			<control id="1" type="label">
				<centerleft>50%</centerleft>
				<height>26</height>
				<font>Med28</font>
				<scroll>true</scroll>
				<align>center</align>
				<aligny>top</aligny>
			</control>
			<!-- message -->
			<control id="5" type="textbox">
				<centerleft>50%</centerleft>
				<height max="800">auto</height>
				<font>PopUpText</font>
				<autoscroll>false</autoscroll>
				<align>center</align>
				<aligny>top</aligny>
				<pagecontrol>3000</pagecontrol>
			</control>
			<!-- Button -->
			<control type="grouplist" id="100">
				<height>50</height>
				<orientation>horizontal</orientation>
				<itemgap>5</itemgap>
				<align>center</align>
				<onright>noop</onright>
				<onleft>noop</onleft>
				<control type="button" id="101">
					<include>DarkGreyButton</include>
					<label>$LOCALIZE[15067]</label>
					<onclick>close</onclick>
					<onup>PageUp(3000)</onup>
					<ondown>PageDown(3000)</ondown>
				</control>
			</control>
		</control>
	</controls>
</window>
