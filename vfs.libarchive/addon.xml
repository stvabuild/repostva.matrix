<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="vfs.libarchive"
  version="2.0.1"
  name="Archive support"
  provider-name="spiff">
  <requires>
<import addon="kodi.binary.global.main" minversion="1.2.0" version="1.3.0"/>
<import addon="kodi.binary.global.general" minversion="1.0.4" version="1.0.5"/>
<import addon="kodi.binary.global.filesystem" minversion="1.1.0" version="1.1.6"/>
<import addon="kodi.binary.instance.vfs" minversion="3.0.0" version="3.0.0"/></requires>
  <!-- Note: .rar is partially supported by this addon, but since the other
             addon vfs.rar also supports it, support is removed here. -->
  <extension
    point="kodi.vfs"
    protocols="archive"
    extensions=".7z|.tar.gz|.tar.bz2|.tar.xz|.zip|.tgz|.tbz2|.gz|.bz2|.xz|.tar"
    files="true"
    directories="true"
    filedirectories="true"
    encodedhostname="true"
    library_windows="vfs.libarchive.dll" />
  <extension point="xbmc.addon.metadata">
    <summary lang="de_DE">Addon zur Verarbeitung mehrerer Archivformate</summary>
    <summary lang="en_GB">Multi-format archive and compression addon</summary>
    <description lang="de_DE">Dieses Add-On verwendet die libarchive Bibliothek, um verschiedene Archiv- und Komprimierungsformate zu verarbeiten.

Unterst√ºtzte Formate sind:
7z, bz2, gz, tar, tar.bz2, tar.gz, tar.xz, tgz, tbz2, xz, zip</description>
    <description lang="en_GB">This add-on uses the libarchive library to read a variety of archive and compression formats.

Supported formats are:
7z, bz2, gz, tar, tar.bz2, tar.gz, tar.xz, tgz, tbz2, xz, zip</description>
    <platform>windows-x86_64</platform>
    <license>GPL-2.0-or-later</license>
    <source>https://github.com/xbmc/vfs.libarchive</source>
    <assets>
      <icon>resources/icon.png</icon>
    </assets>
  </extension>
</addon>
