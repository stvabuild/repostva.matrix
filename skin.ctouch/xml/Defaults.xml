<?xml version="1.0" encoding="utf-8"?>
<includes>
	<default type="label">
		<font>ctouch25</font>
		<scroll>false</scroll>
		<scrollsuffix> • </scrollsuffix>
		<textcolor>button-text</textcolor>
		<shadowcolor>shadow-text</shadowcolor>
		<selectedcolor>listselected-text</selectedcolor>
		<aligny>center</aligny>
	</default>
	<default type="fadelabel">
		<font>ctouch25</font>
		<textcolor>button-text</textcolor>
		<shadowcolor>shadow-text</shadowcolor>
		<selectedcolor>listselected-text</selectedcolor>
		<disabledcolor>disabled-text</disabledcolor>
		<scroll>false</scroll>
		<scrollout>false</scrollout>
		<pauseatend>4000</pauseatend>
		<scrollsuffix> • </scrollsuffix>
		<aligny>center</aligny>
	</default>
	<default type="button">
		<texturefocus border="9" colordiffuse="$VAR[AccentColor]">button-default-white.png</texturefocus>
		<texturenofocus border="9" colordiffuse="midgrey">button-default.png</texturenofocus>
		<font>ctouch25</font>
		<textcolor>button-text</textcolor>
		<shadowcolor>shadow-text</shadowcolor>
		<disabledcolor>disabled-text</disabledcolor>
		<invalidcolor>invalid-text</invalidcolor>
		<pulseonselect>false</pulseonselect>
		<textoffsetx>27</textoffsetx>
		<aligny>center</aligny>
	</default>
	<default type="buttonclear">
		<texturefocus border="9" colordiffuse="$VAR[AccentColor]">button-default.png</texturefocus>
		<font>ctouch25</font>
		<textcolor>button-text</textcolor>
		<shadowcolor>shadow-text</shadowcolor>
		<disabledcolor>disabled-text</disabledcolor>
		<invalidcolor>invalid-text</invalidcolor>
		<pulseonselect>false</pulseonselect>
		<textoffsetx>27</textoffsetx>
		<aligny>center</aligny>
	</default>	
	<default type="togglebutton">
		<texturefocus border="9" colordiffuse="$VAR[AccentColor]">button-default-white.png</texturefocus>
		<texturenofocus border="9" colordiffuse="midgrey">button-default.png</texturenofocus>
		<alttexturenofocus border="9" colordiffuse="midgrey">button-default.png</alttexturenofocus>
		<alttexturefocus border="9" colordiffuse="$VAR[AccentColor]">button-default-white.png</alttexturefocus>
		<font>ctouch25</font>
		<textcolor>button-text</textcolor>
		<shadowcolor>shadow-text</shadowcolor>
		<disabledcolor>disabled-text</disabledcolor>
		<pulseonselect>false</pulseonselect>
		<textoffsetx>27</textoffsetx>
		<aligny>center</aligny>
	</default>
	<default type="textbox">
		<font>ctouch25</font>
		<textcolor>button-text</textcolor>
		<shadowcolor>shadow-text</shadowcolor>
		<autoscroll time="4000" delay="6000" repeat="5000">!System.ScreenSaverActive</autoscroll>
	</default>
	<default type="progress">
		<texturebg border="8,0,8,0">progress-bar.png</texturebg>
		<midtexture border="8,0,8,0">progress-bar-focus.png</midtexture>
		<overlaytexture />
		<colordiffuse>ProgressBarColor</colordiffuse>	
	</default>
	<default type="scrollbar">
		<texturesliderbackground border="8"></texturesliderbackground>
		<texturesliderbar border="8" colordiffuse="white">scrollbar_bar.png</texturesliderbar>
		<texturesliderbarfocus border="8" colordiffuse="$VAR[AccentColor]">scrollbar_bar_focus.png</texturesliderbarfocus>
		<showonepage>false</showonepage>
		<pulseonselect>true</pulseonselect>
		<colordiffuse>ScrollBarColor</colordiffuse>
	</default>
	<default type="spincontrol">
		<textureup>scroll-up.png</textureup>
		<texturedown>scroll-down.png</texturedown>
		<textureupfocus>scroll-up-focus.png</textureupfocus>
		<texturedownfocus>scroll-down-focus.png</texturedownfocus>
		<textureupdisabled>scroll-up.png</textureupdisabled>
		<texturedowndisabled>scroll-down.png</texturedowndisabled>
		<align>right</align>
		<width>48</width>
		<height>48</height>
		<font>ctouch25</font>
		<textcolor>button-text</textcolor>
		<shadowcolor>shadow-text</shadowcolor>
		<disabledcolor>disabled-text</disabledcolor>
		<pulseonselect>false</pulseonselect>
		<subtype>text</subtype>
	</default>
	<default type="spincontrolex">
		<spinwidth>36</spinwidth>
		<spinheight>36</spinheight>
		<texturefocus border="9" colordiffuse="$VAR[AccentColor]">button-default-white.png</texturefocus>
		<texturenofocus border="9" colordiffuse="midgrey">button-default.png</texturenofocus>
		<textureup>scroll-up.png</textureup>
		<texturedown>scroll-down.png</texturedown>
		<textureupfocus>scroll-up-focus.png</textureupfocus>
		<texturedownfocus>scroll-down-focus.png</texturedownfocus>
		<textureupdisabled>scroll-up.png</textureupdisabled>
		<texturedowndisabled>scroll-down.png</texturedowndisabled>
		<font>ctouch25</font>
		<textcolor>button-text</textcolor>
		<shadowcolor>shadow-text</shadowcolor>
		<disabledcolor>disabled-text</disabledcolor>
		<pulseonselect>false</pulseonselect>
		<textoffsetx>27</textoffsetx>
		<aligny>center</aligny>
		<reverse>yes</reverse>
	</default>
    <default type="radiobutton">
        <aligny>center</aligny>
		<font>ctouch25</font>
		<textcolor>button-text</textcolor>
		<shadowcolor>shadow-text</shadowcolor>
		<disabledcolor>disabled-text</disabledcolor>
        <radioposx>1100</radioposx>
        <radiowidth>40</radiowidth>
        <radioheight>40</radioheight>
        <textoffsetx>30</textoffsetx>
		<texturefocus border="9" colordiffuse="$VAR[AccentColor]">button-default-white.png</texturefocus>
        <texturenofocus border="9" colordiffuse="midgrey">button-default.png</texturenofocus>
        <textureradiofocus>buttons/radio-on.png</textureradiofocus>
        <textureradionofocus>buttons/radio-off.png</textureradionofocus>
        <textureradioondisabled>buttons/radio-on.png</textureradioondisabled>
        <textureradiooffdisabled>buttons/radio-off.png</textureradiooffdisabled>
        <pulseonselect>false</pulseonselect>
    </default>		
	<default type="slider">
		<texturesliderbar>blank.png</texturesliderbar>
		<pulseonselect>false</pulseonselect>
		<orientation>horizontal</orientation>
	</default>
	<default type="sliderex">
		<font>ctouch25</font>
		<textcolor>button-text</textcolor>
		<shadowcolor>shadow-text</shadowcolor>
		<disabledcolor>disabled-text</disabledcolor>
		<texturefocus border="9" colordiffuse="$VAR[AccentColor]">button-default-white.png</texturefocus>
		<texturenofocus border="9" colordiffuse="midgrey">button-default.png</texturenofocus>
		<texturesliderbar border="8">progress-bar-focus.png</texturesliderbar>
		<texturesliderbarfocus colordiffuse="ProgressBarColor" border="8">progress-bar-focus.png</texturesliderbarfocus>
		<pulseonselect>true</pulseonselect>
		<sliderwidth>200</sliderwidth>
		<sliderheight>16</sliderheight>
		<textoffsetx>27</textoffsetx>
		<align>left</align>
		<aligny>center</aligny>
	</default>
	<default type="edit">
		<texturefocus border="9" colordiffuse="$VAR[AccentColor]"></texturefocus>
		<texturenofocus border="9" colordiffuse="midgrey"></texturenofocus>
		<font>ctouch23</font>
		<textcolor>button-text</textcolor>
		<shadowcolor>shadow-text</shadowcolor>
		<disabledcolor>disabled-text</disabledcolor>
		<invalidcolor>invalid-text</invalidcolor>
		<pulseonselect>true</pulseonselect>
		<textoffsetx>27</textoffsetx>
		<aligny>center</aligny>
	</default>
</includes>