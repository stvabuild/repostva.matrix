<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol>9000</defaultcontrol>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="button">
			<!-- Touch mouse close button -->
			<align>center</align>
			<top>0</top>
			<width>100%</width>
			<height>100%</height>
			<texturefocus colordiffuse="$VAR[AccentColor]"></texturefocus>
			<texturenofocus></texturenofocus>
			<onclick>Close</onclick>
		</control>
		<control type="image">
			<include>fullscreenimage</include>
			<texture colordiffuse="mask-background">background-mask.png</texture>
			<aspectratio>scale</aspectratio>
		</control>
		<control type="label" id="1">
			<!-- Dialog heading -->
			<centerleft>50%</centerleft>
			<top>340</top>
			<width>1000</width>
			<height>45</height>
			<align>center</align>
			<textcolor>$VAR[AccentColor]</textcolor>
			<font>ctouch23w</font>
		</control>
		<control type="textbox" id="9">
			<!-- Dialog info prompt -->
			<centerleft>50%</centerleft>
			<top>400</top>
			<width>1000</width>
			<height>125</height>
			<align>center</align>
			<font>ctouch20</font>
			<autoscroll time="2000" delay="8000" repeat="5000">Skin.HasSetting(text-autoscroll) + !System.ScreenSaverActive</autoscroll>
		</control>
		<control type="progress" id="20">
			<centerleft>50%</centerleft>
			<top>580</top>
			<width>1000</width>
			<height>14</height>
			<info>System.Progressbar</info>
		</control>
		<control type="grouplist" id="9000">
			<orientation>horizontal</orientation>
			<centerleft>50%</centerleft>
			<top>630</top>
			<width>1000</width>
			<height>65</height>
			<itemgap>50</itemgap>
			<align>center</align>
			<control type="button" id="10">
				<width>250</width>
				<height>65</height>
				<font>ctouch21</font>
				<texturefocus border="9" colordiffuse="$VAR[AccentColor]">button-default-white.png</texturefocus>
				<texturenofocus border="9" colordiffuse="midgrey">button-default-white.png</texturenofocus>				
				<align>center</align>
			</control>
			<control type="button" id="11">
				<width>250</width>
				<height>65</height>
				<font>ctouch21</font>
				<align>center</align>
				<texturefocus border="9" colordiffuse="$VAR[AccentColor]">button-default-white.png</texturefocus>
				<texturenofocus border="9" colordiffuse="midgrey">button-default-white.png</texturenofocus>				
			</control>
			<control type="button" id="12">
				<width>250</width>
				<height>65</height>
				<font>ctouch21</font>
				<align>center</align>
				<texturefocus border="9" colordiffuse="$VAR[AccentColor]">button-default-white.png</texturefocus>
				<texturenofocus border="9" colordiffuse="midgrey">button-default-white.png</texturenofocus>				
			</control>
		</control>
	</controls>
</window>