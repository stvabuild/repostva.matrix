<?xml version="1.0" encoding="utf-8"?>
<window>
	<onload condition="String.Contains(Player.Filenameandpath,theme.mp3) | !String.IsEmpty(Window(home).Property(PlayingOST))">Dialog.Close(all,true)</onload>
	<animation effect="fade" time="250" delay="1750">WindowOpen</animation>
	<animation effect="fade" time="100">WindowClose</animation>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
	 <control type="group">
		<visible>Window.IsVisible(home) + !Skin.HasSetting(autotrailer)</visible>
		<control type="image">
			<animation effect="fade" delay="5000" start="0" end="100" time="1000" condition="true">Conditional</animation>
			<include>fullscreenimage</include>
			<texture colordiffuse="mask-background">background-mask.png</texture>
			<aspectratio>scale</aspectratio>
		</control>
		<control type="image">
			<!-- Busy animation -->
			<left>864</left>
			<top>435</top>
			<width>150</width>
			<height>150</height>
			<colordiffuse>blue</colordiffuse>
			<texture colordiffuse="$VAR[AccentColor]">busy_bg.png</texture>
			<aspectratio>keep</aspectratio>
		</control>
		<control type="image">
			<!-- Busy animation -->
			<left>864</left>
			<top>435</top>
			<width>150</width>
			<height>150</height>
			<colordiffuse>blue</colordiffuse>
			<texture colordiffuse="$VAR[AccentColor]">busy.png</texture>
			<aspectratio>keep</aspectratio>
			<include>busy-spin</include>
		</control>
	 </control>	
	 <control type="group">
		<visible>!Window.IsVisible(home)</visible>
		<control type="image">
			<animation effect="fade" delay="5000" start="0" end="100" time="1000" condition="true">Conditional</animation>
			<include>fullscreenimage</include>
			<texture colordiffuse="mask-background">background-mask.png</texture>
			<aspectratio>scale</aspectratio>
		</control>
		<control type="image">
			<!-- Busy animation -->
			<left>864</left>
			<top>435</top>
			<width>150</width>
			<height>150</height>
			<colordiffuse>blue</colordiffuse>
			<texture colordiffuse="$VAR[AccentColor]">busy_bg.png</texture>
			<aspectratio>keep</aspectratio>
		</control>
		<control type="image">
			<!-- Busy animation -->
			<left>864</left>
			<top>435</top>
			<width>150</width>
			<height>150</height>
			<colordiffuse>blue</colordiffuse>
			<texture colordiffuse="$VAR[AccentColor]">busy.png</texture>
			<aspectratio>keep</aspectratio>
			<include>busy-spin</include>
		</control>
	 </control>	
	</controls>
</window>