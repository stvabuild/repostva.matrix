<?xml version="1.0" encoding="utf-8"?>
<window>
	<controls>
		<control type="group" id="1">
			<visible>[Player.ShowInfo | Window.IsActive(videoosd)] + ![Window.IsVisible(sliderdialog) | Window.IsVisible(osdvideosettings) | Window.IsVisible(osdaudiosettings) | Window.IsVisible(videobookmarks)]</visible>
			<control type="image" id="1">
				<!-- Dialog background -->
				<left>0</left>
				<top>720</top>
				<height>393</height>
				<width>1920</width>
				<texture colordiffuse="mask-background">background-mask.png</texture>
			</control>
			<include>player-mediaicon</include>
			<control type="label" id="1">
				<!-- Title of currently playing video -->
				<left>370</left>
				<top>740</top>
				<width>1100</width>
				<height>38</height>
				<font>ctouch25</font>
				<label>[B]$INFO[VideoPlayer.Title][/B]</label>
				<align>left</align>
				<visible>!VideoPlayer.Content(LiveTV)</visible>
			</control>
			<control type="group" id="1">
				<!-- Details of Live TV Program -->
				<visible>VideoPlayer.Content(LiveTV)</visible>
				<control type="label" id="1">
					<!-- TV Channel Name -->
					<left>370</left>
					<top>730</top>
					<width>320</width>
					<height>38</height>
					<font>ctouch20</font>
					<label>[B]$INFO[VideoPlayer.ChannelName][/B]</label>
					<align>left</align>
				</control>
				<control type="label" id="1">
					<!-- Title of Live TV Program -->
					<left>370</left>
					<top>760</top>
					<width>726</width>
					<height>38</height>
					<font>ctouch16</font>
					<label>[B]$INFO[VideoPlayer.Title,$LOCALIZE[19030]: ,][/B]</label>
					<align>left</align>
					
				</control>
				<control type="label" id="1">
					<!-- Tv Show title up next -->
					<left>1100</left>
					<top>760</top>
					<width>800</width>
					<height>38</height>
					<font>ctouch16</font>
					<label>[B]$INFO[VideoPlayer.NextTitle,$LOCALIZE[19031]: ,][/B]</label>
					<align>left</align>
					<textcolor>disabled-text</textcolor>
				</control>
			</control>
			<control type="textbox" id="1">
				<!-- Plot -->
				<left>370</left>
				<top>800</top>
				<width>1500</width>
				<height>140</height>
				<font>ctouch18</font>
				<label>$INFO[VideoPlayer.Plot]</label>
				<align>justify</align>
				<include condition="Skin.Hasetting(text-autoscroll)">scrolltext</include>
				<visible>!String.IsEmpty(VideoPlayer.Plot)</visible>
			</control>
			<control type="grouplist" id="1">
				<!-- Media flags -->
				<left>1550</left>
				<top>730</top>
				<width>340</width>
				<height>60</height>
				<align>center</align>
				<orientation>horizontal</orientation>
				<itemgap>-3</itemgap>
				<animation effect="fade" start="0" end="100" time="1000">WindowOpen</animation>
				<control type="image" id="1">
					<!-- Audio Codec -->
					<width>86</width>
					<height>60</height>
					<texture background="true">$INFO[VideoPlayer.AudioCodec,special://skin/extras/images/audio/,.png]</texture>
					<visible>!Player.ChannelPreviewActive</visible>
				</control>
				<control type="image" id="1">
					<!-- Video Codec -->
					<width>86</width>
					<height>60</height>
					<texture background="true">$INFO[VideoPlayer.VideoCodec,special://skin/extras/images/video/,.png]</texture>
					<visible>!Player.ChannelPreviewActive</visible>
				</control>
				<control type="image" id="1">
					<!-- Video Aspect Ratio -->
					<width>86</width>
					<height>60</height>
					<texture background="true">$INFO[VideoPlayer.VideoAspect,special://skin/extras/images/aspectratio/,.png]</texture>
					<visible>!Player.ChannelPreviewActive</visible>
				</control>
				<control type="image" id="1">
					<!-- Video Resolution -->
					<width>86</width>
					<height>60</height>
					<texture background="true">$INFO[VideoPlayer.VideoResolution,special://skin/extras/images/resolution/,.png]</texture>
					<visible>!Player.ChannelPreviewActive</visible>
				</control>
			</control>
			<control type="group" id="1">
				<visible>[Window.IsVisible(fullscreenvideo)] + ![Window.IsVisible(sliderdialog) | Window.IsVisible(osdvideosettings) | Window.IsVisible(osdaudiosettings) | Window.IsVisible(videobookmarks)]</visible>
				<control type="group" id="1">
					<visible>!VideoPlayer.Content(LiveTV)</visible>
					<control type="label" id="1">
						<left>26</left>
						<top>1020</top>
						<width>345</width>
						<height>30</height>
						<font>ctouch20</font>
						<label>[COLOR=disabled-text]($INFO[System.Time])[/COLOR] $INFO[VideoPlayer.Time]</label>
						<align>left</align>
					</control>
					<control type="label" id="1">
						<left>1550</left>
						<top>1020</top>
						<width>345</width>
						<height>30</height>
						<font>ctouch20</font>
						<label>-$INFO[VideoPlayer.TimeRemaining] [COLOR=disabled-text]($INFO[Player.FinishTime])[/COLOR]</label>
						<align>right</align>
					</control>
				</control>
				<control type="group" id="1">
					<visible>VideoPlayer.Content(LiveTV)</visible>
					<control type="label" id="1">
						<left>25</left>
						<top>1020</top>
						<width>345</width>
						<height>30</height>
						<font>ctouch20</font>
						<label>[COLOR=disabled-text]($INFO[System.Time])[/COLOR] $INFO[PVR.EpgEventElapsedTime]</label>
						<align>left</align>
					</control>
					<control type="label" id="1">
						<left>1550</left>
						<top>1020</top>
						<width>345</width>
						<height>30</height>
						<font>ctouch20</font>
						<label>-$INFO[PVR.EpgEventRemainingTime] [COLOR=disabled-text]($INFO[PVR.EpgEventFinishTime])[/COLOR]</label>
						<align>right</align>
					</control>
				</control>
				<control type="group" id="1">
					<visible>![Window.IsVisible(seekbar)] + ![Window.IsVisible(videoosd)]</visible>
					<control type="progress" id="1">
						<left>25</left>
						<top>975</top>
						<width>1870</width>
						<height>22</height>
						<info>Player.ProgressCache</info>
						<colordiffuse>CacheBarColor</colordiffuse>
						<visible>!Pvr.IsPlayingTv</visible>
					</control>
					<control type="progress" id="1">
						<left>25</left>
						<top>975</top>
						<width>1870</width>
						<height>22</height>
						<info>Player.Progress</info>
						<visible>!Pvr.IsPlayingTv</visible>
					</control>
					<control type="slider" id="1">
						<left>25</left>
						<top>975</top>
						<width>1870</width>
						<height>22</height>
						<info>Player.Progress</info>
						<visible>!Pvr.IsPlayingTv</visible>
					</control>
					<control type="progress" id="1">
						<left>25</left>
						<top>975</top>
						<width>1870</width>
						<height>22</height>
						<info>PVR.EpgEventProgress</info>
						<visible>Pvr.IsPlayingTv</visible>
					</control>
				</control>
			</control>
		</control>
		<!-- Aspect Ratio / Zoom Info Overlay -->
		<control type="group">
			<left>0</left>
			<top>100</top>
			<width>100%</width>
			<height>275</height>
			<!-- Row 1 label -->
			<control type="label" id="10">
				<left>50</left>
				<top>20</top>
				<width>70%</width>
				<height>50</height>
				<font>ctouch20</font>
			</control>
			<!-- Row 2 label -->
			<control type="label" id="11">
				<left>50</left>
				<top>110</top>
				<width>70%</width>
				<height>50</height>
				<font>ctouch20</font>
			</control>
			<!-- Row 3 label -->
			<control type="label" id="12">
				<left>50</left>
				<top>200</top>
				<width>70%</width>
				<height>50</height>
				<font>ctouch20</font>
			</control>
		</control>
	</controls>
</window>