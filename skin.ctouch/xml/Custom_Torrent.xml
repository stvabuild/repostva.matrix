<?xml version="1.0" encoding="utf-8"?>
<window type="dialog" id="1133">
	<defaultcontrol>1999</defaultcontrol>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="image">
			<animation effect="fade" delay="5000" start="0" end="100" time="1000" condition="true">Conditional</animation>
			<include>fullscreenimage</include>
			<texture colordiffuse="mask-background">background-mask.png</texture>
			<aspectratio>scale</aspectratio>
		</control>
		<control type="image">
			<!-- Dialog background image -->
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>610</width>
			<height>360</height>
			<texture border="14">button-menu-background.png</texture>
		</control>
		<control type="button">
			<!-- Touch mouse close button -->
			<centerleft>50%</centerleft>
			<top>630</top>
			<width>64</width>
			<height>64</height>
			<texturefocus>touch-close.png</texturefocus>
			<texturenofocus>touch-close.png</texturenofocus>
			<onclick>Close</onclick>
		</control>
		<control type="panel" id="1999">
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>600</width>
			<height>350</height>
			<onleft>Close</onleft>
			<onright>Close</onright>
			<aligny>top</aligny>
			<itemlayout width="610" height="130">
				<control type="label">
					<centerleft>50%</centerleft>
					<top>20</top>
					<width>590</width>
					<height>72</height>
					<font>ctouch20</font>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout width="610" height="130">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>590</width>
					<height>100</height>
					<texture border="9" colordiffuse="$VAR[AccentColor]">button-default-white.png</texture>
				</control>
				<control type="label">
					<centerleft>50%</centerleft>
					<top>20</top>
					<width>590</width>
					<height>72</height>
					<font>ctouch20</font>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</focusedlayout>
			<content>
				<item>
					<label>Elementum 
- [COLOR grey]para Android ARM y Windows x64[/COLOR]</label>
					<onclick>Dialog.Close(all)</onclick>
					<onclick condition="!System.HasAddon(plugin.video.elementum)">InstallAddon(plugin.video.elementum)</onclick>
				</item>
				<item>
					<label>Torrest
- [COLOR grey]- Primero se instalar√° el repositorio[/COLOR]</label>
					<onclick>Dialog.Close(all)</onclick>
					<onclick condition="System.HasAddon(repository.github)">InstallAddon(plugin.video.torrest)</onclick>
					<onclick condition="System.HasAddon(repository.github)">ActivateWindow(10040,&quot;addons://repository.github/xbmc.addon.video&quot;,return)</onclick>
					<onclick condition="!System.HasAddon(repository.github)">InstallAddon(repository.github)</onclick>
					</item>
			</content>
		</control>
	</controls>
</window>