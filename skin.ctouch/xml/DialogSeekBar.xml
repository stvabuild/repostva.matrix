<?xml version="1.0" encoding="utf-8"?>
<window>
	<visible>Player.Seeking | Player.Forwarding | Player.Rewinding </visible>
	<animation effect="fade" end="0" time="100">WindowClose</animation>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="image" id="1">
			<!-- Dialog background -->
			<left>0</left>
			<top>140</top>
			<height>1080</height>
			<width>1920</width>
			<texture colordiffuse="ff000000">grandient_overlay_osd.png</texture>
		</control>	
		<control type="group">
			<visible>![Window.IsVisible(fullscreeninfo) | Window.IsVisible(sliderdialog) | Window.IsVisible(osdvideosettings) | Window.IsVisible(osdaudiosettings) | Window.IsVisible(videobookmarks) | Window.IsVisible(subtitlesearch) | Window.IsVisible(osdsubtitlesettings)]</visible>
		</control>
		<!-- Player action labels -->
		<control type="group">
			<visible>[Window.IsVisible(fullscreenvideo) | Window.IsVisible(visualisation)] + ![Window.IsVisible(sliderdialog) | Window.IsVisible(osdvideosettings) | Window.IsVisible(osdaudiosettings) | Window.IsVisible(subtitlesearch) | Window.IsVisible(osdsubtitlesettings) | Window.IsVisible(videobookmarks)]</visible>
			<control type="image">
				<!-- Seekbar Dialog background image -->
				<left>645</left>
				<top>30</top>
				<height>400</height>
				<width>642</width>
				<texture colordiffuse="ff000000">bg-osd-state.png</texture>
				<visible>Player.Caching | Player.Paused | Player.Forwarding | Player.Rewinding</visible>
			</control>
			<control type="label">
				<width>1920</width>
				<height>60</height>
				<top>995</top>
				<align>center</align>
				<label>$INFO[Player.SeekStepSize]</label>
				<visible>!String.IsEmpty(Player.SeekStepSize)</visible>
			</control>	
			<control type="grouplist">
				<left>612</left>
				<top>192</top>
				<width>696</width>
				<height>96</height>
				<align>center</align>
				<aligny>center</aligny>
				<orientation>horizontal</orientation>
				<control type="image" id="750">
					<width>96</width>
					<height>96</height>
					<texture>$VAR[PlayStateImage]</texture>
					<animation effect="rotate" start="360" end="0" center="auto" time="8400" loop="true" condition="String.IsEqual(Control.GetLabel(750),busy.png)">conditional</animation>
				</control>
				<control type="label">
					<!-- Player state text -->
					<width min="0" max="570">auto</width>
					<height>90</height>
					<label>$VAR[PlayStateTxt]</label>
					<font>ctouch38</font>
				</control>
			</control>
		</control>
		<include>PVRChannelNumberInput</include>
		<control type="group">
			<visible>[Window.IsVisible(fullscreenvideo)] + ![Window.IsVisible(sliderdialog) | Window.IsVisible(osdvideosettings) | Window.IsVisible(osdaudiosettings) | Window.IsVisible(subtitlesearch) | Window.IsVisible(osdsubtitlesettings) | Window.IsVisible(videobookmarks)]</visible>
			<!-- Player info labels -->
			<control type="group" id="1">
				<visible>!VideoPlayer.Content(LiveTV)</visible>
					<control type="label" id="1">
						<left>30</left>
						<top>1015</top>
						<width>140</width>
						<height>30</height>
						<font>ctouch18</font>
						<label>Hora $INFO[System.Time(hh:mm)]</label>
						<align>right</align>
					</control>
					<control type="label" id="1">
						<left>180</left>
						<top>1015</top>
						<width>200</width>
						<height>30</height>
						<font>ctouch18</font>
						<label>[COLOR blue]|[/COLOR] Termina $INFO[Player.FinishTime]</label>
						<align>left</align>
					</control>				
					<control type="label" id="1">
						<right>145</right>
						<top>1015</top>
						<width>140</width>
						<height>30</height>
						<font>ctouch18</font>
						<label>$INFO[VideoPlayer.Time] [COLOR blue] |[/COLOR] </label>
						<align>right</align>
					</control>
					<control type="label" id="1">
						<right>30</right>
						<top>1015</top>
						<width>130</width>
						<height>30</height>
						<font>ctouch18</font>
						<label>$INFO[VideoPlayer.Duration]</label>
						<align>right</align>
					</control>					
			</control>
			<control type="group" id="1">
				<visible>VideoPlayer.Content(LiveTV)</visible>
				<control type="label" id="1">
					<left>25</left>
					<top>920</top>
					<width>345</width>
					<height>30</height>
					<font>ctouch20</font>
					<label>[COLOR=disabled-text]($INFO[System.Time])[/COLOR] $INFO[PVR.EpgEventElapsedTime]</label>
					<align>left</align>
				</control>
				<control type="label" id="1">
					<left>1550</left>
					<top>920</top>
					<width>345</width>
					<height>30</height>
					<font>ctouch20</font>
					<label>-$INFO[PVR.EpgEventRemainingTime] [COLOR=disabled-text]($INFO[PVR.EpgEventFinishTime])[/COLOR]</label>
					<align>right</align>
				</control>
			</control>
			<control type="group">
				<animation effect="fade" start="100" end="0" condition="String.IsEmpty(MusicPlayer.TimeRemaining)">Conditional</animation>
				<control type="group" id="1">
					<visible>!VideoPlayer.Content(LiveTV)</visible>
					<control type="image">
						<left>25</left>
						<top>960</top>
						<width>1870</width>
						<height>22</height>
						<texture border="8" colordiffuse="FF1f1f1f">progress-bar-focus.png</texture>	
					</control>
					<control type="progress">
						<left>25</left>
						<top>960</top>
						<width>1870</width>
						<height>22</height>
						<colordiffuse>CacheBarColor</colordiffuse>						
						<info>Player.ProgressCache</info>
					</control>
					<control type="progress">
						<left>25</left>
						<top>960</top>
						<width>1870</width>
						<height>22</height>
						<info>Player.Progress</info>
					</control>
					<control type="slider" id="401">
						<!-- Seek Slider -->
						<left>25</left>
						<top>960</top>
						<width>1870</width>
						<height>25</height>
						<textureslidernib>progress-marker-focus.png</textureslidernib>
						<textureslidernibfocus>progress-marker-focus.png</textureslidernibfocus>
						<action>seek</action>
						<animation effect="fade" start="100" end="60" condition="!Control.HasFocus(401) + !Player.DisplayAfterSeek">Conditional</animation>
						<visible>Skin.HasSetting(homemenu-icon)</visible>															
					</control>					
				</control>
				<control type="progress">
					<left>25</left>
					<top>960</top>
					<width>1870</width>
					<height>22</height>
					<info>PVR.EpgEventProgress</info>
					<visible>VideoPlayer.Content(LiveTV)</visible>
				</control>
				<control type="slider" id="401">
					<!-- Live TV Seek Slider -->
					<left>25</left>
					<top>960</top>
					<width>1870</width>
					<height>22</height>
					<info>PVR.TimeshiftProgressPlayPos</info>
					<action>pvr.seek</action>
					<visible>VideoPlayer.Content(LiveTV) + Skin.HasSetting(homemenu-icon)</visible>
				</control>
			</control>
		</control>
	</controls>
</window>