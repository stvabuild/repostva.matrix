<?xml version="1.0" encoding="utf-8"?>
<window>
	<visible>Player.Seeking | $EXP[PlayerSeek]</visible>
	<animation effect="fade" end="0" time="500">WindowClose</animation>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="image" id="1">
			<!-- Dialog background -->
			<left>0</left>
			<top>0</top>
			<height>1080</height>
			<width>1920</width>
			<texture>diffuse/background_mask.png</texture>
			<visible>Window.IsVisible(fullscreenvideo)</visible>
		</control>
		<!-- Player action labels -->
		<control type="group">
			<visible>[Window.IsVisible(fullscreenvideo) | Window.IsVisible(visualisation)] + ![Window.IsVisible(sliderdialog) | Window.IsVisible(osdvideosettings) | Window.IsVisible(osdaudiosettings) | Window.IsVisible(subtitlesearch) | Window.IsVisible(osdsubtitlesettings) | Window.IsVisible(videobookmarks)]</visible>
			<control type="image">
				<!-- Seekbar Dialog background image -->
				<left>645</left>
				<top>30</top>
				<height>400</height>
				<width>642</width>
				<texture colordiffuse="ff000000">bg-osd-state.png</texture>
				<visible>Player.Caching | Player.Paused | Player.Forwarding | Player.Rewinding</visible>
			</control>
			<control type="label">
				<width>100%</width>
				<height>60</height>
				<top>995</top>
				<centerleft>85%</centerleft>
				<font>ctouch20</font>
				<label>$VAR[SeekLabel]</label>
			</control>	
			<control type="grouplist">
				<left>612</left>
				<top>50</top>
				<width>696</width>
				<height>96</height>
				<align>center</align>
				<aligny>center</aligny>
				<orientation>horizontal</orientation>
				<control type="image" id="750">
					<width>85</width>
					<height>85</height>
					<texture>$VAR[PlayStateImage]</texture>
					<animation effect="rotate" start="360" end="0" center="auto" time="8400" loop="true" condition="String.IsEqual(Control.GetLabel(750),busy.png)">conditional</animation>
				</control>
				<control type="label">
					<!-- Player state text -->
					<width min="0" max="750">auto</width>
					<left>10</left>
					<label>$VAR[PlayStateTxt]</label>
					<font>ctouch25w</font>
				</control>
			</control>
		</control>
		<include>PVRChannelNumberInput</include>
		<control type="group">
			<visible>[Window.IsVisible(fullscreenvideo)] + ![Window.IsVisible(sliderdialog) | Window.IsVisible(osdvideosettings) | Window.IsVisible(osdaudiosettings) | Window.IsVisible(subtitlesearch) | Window.IsVisible(osdsubtitlesettings) | Window.IsVisible(videobookmarks)]</visible>
			<!-- Player info labels -->
			<control type="group" id="1">
				<visible>!VideoPlayer.Content(LiveTV)</visible>
					<control type="label" id="1">
						<left>30</left>
						<top>915</top>
						<width>345</width>
						<height>30</height>
						<font>ctouch19</font>
						<label>Acaba a las $INFO[Player.FinishTime]</label>
						<align>left</align>
					</control>
					<control type="label" id="1">
						<left>1545</left>
						<top>915</top>
						<width>345</width>
						<height>30</height>
						<font>ctouch19</font>
						<label>$INFO[VideoPlayer.Time] | $INFO[Player.Duration]</label>
						<align>right</align>
					</control>
			</control>
			<control type="group" id="1">
				<visible>VideoPlayer.Content(LiveTV)</visible>
					<control type="label" id="1">
						<left>1545</left>
						<top>905</top>
						<width>345</width>
						<height>30</height>
						<font>ctouch19</font>
						<label>$INFO[PVR.EpgEventElapsedTime] | $INFO[PVR.EpgEventDuration]</label>
						<align>right</align>
					</control>
					<control type="label" id="1">
						<left>30</left>
						<top>905</top>
						<width>345</width>
						<height>30</height>
						<font>ctouch19</font>
						<label>Acaba a las $INFO[PVR.EpgEventFinishTime]</label>
						<align>left</align>
					</control>
			</control>
			<control type="group">
				<control type="group" id="1">
					<visible>!VideoPlayer.Content(LiveTV) + !Skin.HasSetting(menu-little)</visible>
					<control type="ranges">
						<left>717</left>
						<top>1040</top>
						<width>870</width>
						<height>12</height>
						<texturebg colordiffuse="00FFFFFF" border="8,0,8,0">progress-bar.png</texturebg>
						<midtexture colordiffuse="FFFF0000" border="8,0,8,0">progress-bar-focus.png</midtexture>
						<info>Player.Cutlist</info>
					</control>
					<control type="progress">
						<left>25</left>
						<top>960</top>
						<width>1870</width>
						<height>12</height>
						<colordiffuse>CacheBarColor</colordiffuse>						
						<info>Player.ProgressCache</info>
					</control>
					<control type="progress">
						<left>25</left>
						<top>960</top>
						<width>1870</width>
						<height>12</height>
						<info>Player.Progress</info>
					</control>
					<control type="slider" id="401">
						<description>Seek Slider</description>
						<posx>25</posx>
						<posy>960</posy>
						<width>1870</width>
						<height>12</height>
						<action>seek</action>
						<texturesliderbar></texturesliderbar>
						<textureslidernib></textureslidernib>
						<textureslidernibfocus></textureslidernibfocus>
					</control>
				</control>
				<control type="group" id="1">
					<visible>!VideoPlayer.Content(LiveTV) + Skin.HasSetting(menu-little)</visible>
					<control type="ranges">
						<left>717</left>
						<top>1040</top>
						<width>870</width>
						<height>8</height>
						<texturebg colordiffuse="00FFFFFF" border="8,0,8,0">progress-bar.png</texturebg>
						<midtexture colordiffuse="FFFF0000" border="8,0,8,0">progress-bar-focus.png</midtexture>
						<info>Player.Cutlist</info>
					</control>
					<control type="progress">
						<left>25</left>
						<top>960</top>
						<width>1870</width>
						<height>12</height>
						<colordiffuse>CacheBarColor</colordiffuse>						
						<info>Player.ProgressCache</info>
					</control>
					<control type="progress">
						<left>25</left>
						<top>960</top>
						<width>1870</width>
						<height>12</height>
						<info>Player.Progress</info>
					</control>
					<control type="slider" id="401">
						<description>Seek Slider</description>
						<posx>25</posx>
						<posy>960</posy>
						<width>1870</width>
						<height>22</height>
						<action>seek</action>
						<texturesliderbar></texturesliderbar>
						<textureslidernib></textureslidernib>
						<textureslidernibfocus></textureslidernibfocus>
					</control>
				</control>
				<control type="progress">
					<left>25</left>
					<top>950</top>
					<width>1870</width>
					<height>22</height>
					<info>PVR.EpgEventProgress</info>
					<visible>VideoPlayer.Content(LiveTV)</visible>
				</control>
				<control type="slider" id="401">
					<!-- Live TV Seek Slider -->
					<left>25</left>
					<top>950</top>
					<width>1870</width>
					<height>22</height>
					<info>PVR.TimeshiftProgressPlayPos</info>
					<action>pvr.seek</action>
					<visible>VideoPlayer.Content(LiveTV)</visible>
				</control>
			</control>
		</control>
	</controls>
</window>