<?xml version="1.0" encoding="utf-8"?>
<window type="dialog" id="1142">
	<defaultcontrol>1999</defaultcontrol>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="image">
			<animation effect="fade" delay="5000" start="0" end="100" time="1000" condition="true">Conditional</animation>
			<include>fullscreenimage</include>
			<texture>background-mask-black.png</texture>
			<aspectratio>scale</aspectratio>
		</control>
		<control type="button">
			<!-- Touch mouse close button -->
			<right>15</right>
			<bottom>15</bottom>
			<width>180</width>
			<height>75</height>
			<texturefocus colordiffuse="$VAR[AccentColor]">backtransparent.png</texturefocus>
			<texturenofocus colordiffuse="midgrey">backtransparent.png</texturenofocus>
			<onclick>Dialog.Close(1132)</onclick>
			<align>center</align>
			<aligny>center</aligny>
			<label>Cerrar</label>
			<font>ctouch19</font>
			<visible>Skin.HasSetting(menulittle)</visible>
		</control>
		<control type="panel" id="1999">
			<centerleft>50%</centerleft>
			<centertop>51%</centertop>
			<width>540</width>
			<height>350</height>
			<onleft>Close</onleft>
			<onright>Close</onright>
			<aligny>top</aligny>
			<itemlayout width="540" height="75">
				<control type="label">
					<centerleft>50%</centerleft>
					<align>center</align>
					<top>20</top>
					<width>540</width>
					<height>36</height>
					<font>ctouch22</font>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout width="540" height="75">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>540</width>
					<height>75</height>
					<texture border="9" colordiffuse="$VAR[AccentColor]">button-default-white.png</texture>
				</control>
				<control type="label">
					<centerleft>50%</centerleft>
					<align>center</align>
					<top>20</top>
					<width>540</width>
					<height>36</height>
					<font>ctouch22</font>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</focusedlayout>
			<content>
				<item>
					<label>Series</label>
					<onclick>Dialog.Close(all)</onclick>
					<onclick>ActivateWindow(videos,library://video/tvshows/,return)</onclick>
				</item>
				<item>
					<label>Pel√≠culas</label>
					<onclick>Dialog.Close(all)</onclick>
					<onclick>ActivateWindow(videos,library://video/movies/,return)</onclick>
				</item>
				<item>
					<label>Actualizar Videoteca Alfa</label>
					<onclick>Dialog.Close(all)</onclick>
					<onclick>PlayMedia(&quot;plugin://plugin.video.alfa/?&quot;)</onclick>
					<visible>System.HasAddon(plugin.video.alfa)</visible>
				</item>
			</content>
		</control>
	</controls>
</window>