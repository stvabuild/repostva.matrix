<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.kodileiawizard.matrix" name="[COLOR white]Kodileia Wizard [COLOR chartreuse]Matrix[/COLOR]" version="1.0" provider-name="Grupo Kodileia">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.1.7" />
    </requires>
    
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
	
	<extension point="xbmc.addon.repository" name="repofamilyleia">
        <info>https://raw.githubusercontent.com/Leia18/repofamilyleia/master/Repositorio/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/Leia18/repofamilyleia/master/Repositorio/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/Leia18/repofamilyleia/master/Repositorio/</datadir>
    </extension>
    
    <extension point="xbmc.service" library="startup.py" start="startup" />
    
    <extension point="xbmc.addon.metadata">
    <summary lang="en">Wizard</summary>
    <description lang="en">Grupo Kodileia. Consultas en telegram @kodi18.</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        

        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>



